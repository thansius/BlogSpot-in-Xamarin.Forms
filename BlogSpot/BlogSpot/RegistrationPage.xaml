<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlogSpot.RegistrationPage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Entry x:Name="FullNameEntry" Placeholder="Full Name" />
            <Entry x:Name="UsernameEntry" Placeholder="Username" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
            <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" />

            <Button Text="Register" Clicked="Register_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>