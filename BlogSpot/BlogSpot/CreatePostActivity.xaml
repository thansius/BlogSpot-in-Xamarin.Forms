<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlogSpot.CreatePostActivity">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Create a Post" FontSize="20" HorizontalOptions="CenterAndExpand" Margin="0,20,0,10"/>
            <Entry Placeholder="Post Title" x:Name="PostTitleEntry" Margin="20"/>
            <Editor Placeholder="Post Body" x:Name="PostBodyEditor" Margin="20"/>
            <Button Text="Create" Clicked="Create_Clicked" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>